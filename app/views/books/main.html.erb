<body class="books_body">
	<header>
		<h1 class="books_head">Books</h1>
	</header>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<th class="book_list book_title"><%= book.title %></th>
				<th class="book_list book_body"><%= book.body %></th>
				<th class="book_list book_link"><%= link_to 'Show', book_path(book.id) %></th>
			</tr>
			<% end %>
	</table>
	<h2>New book</h2>
	<%= form_for(@book, url: '/books') do |f| %>
		<h4 class="nb">Title</h4>
		<div><%= f.text_field :title %></div>
		<h4 class="nb">Body</h4>
		<div><%= f.text_area :body %></div><br>
		<div><%= f.submit 'Create Book' %></div>
	<% end %>
</body>