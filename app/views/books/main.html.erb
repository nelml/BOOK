<body class="books_body">
	<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
	<% end %>
	<header>
		<h1 class="books_head">Books</h1>
	</header>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<th class="book_list book_title"><%= book.title %></th>
				<th class="book_list book_body"><%= book.body %></th>
				<th class="book_list book_link"><%= link_to 'Show', book_path(book.id) %></th>
				<th class="book_list book_link">
					<%= link_to 'Edit', edit_book_path(book.id) %>
				</th>
				<th class ="book_list book_link">
					<%= link_to 'Delete', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %>
				</th>
			</tr>
			<% end %>
	</table>
	<h2>New book</h2>
	<%= form_for(@book, url: '/books') do |f| %>
		<div class="field_new">
		<h4 class="nb">Title</h4>
		<div><%= f.text_field :title %></div>
	</div>
	<div class="field_new">
		<h4 class="nb">Body</h4>
		<div><%= f.text_area :body %></div><br>
	</div>

	<div>
		<%= f.submit 'Create Book', class:"btn" %>
	</div>
<% end %>
</body>