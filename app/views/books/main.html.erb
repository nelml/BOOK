<body class="books_body">
	<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
	<% end %>
	<header>
		<h1 class="books_head">Books</h1>
	</header>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td class="bl book_title"><%= book.title %></th>
				<td class="bl book_body"><%= book.body %></th>
				<td class="bl book_link"><%= link_to 'Show', book_path(book.id) %></th>
				<td class="bl book_link">
					<%= link_to 'Edit', edit_book_path(book.id) %>
				</td>
				<td class ="book_link">
					<%= link_to 'Delete', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %>
				</td>
			</tr>
			<% end %>
	</table>
	<h2 class="main_h2">New book</h2>
	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>

			<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<%= form_for(@book) do |f| %>
		<div class="field_new">
		<h4 class="nb">Title</h4>
		<div><%= f.text_field :title %></div>
	</div>
	<div class="field_new">
		<h4 class="nb">Body</h4>
		<div><%= f.text_area :body %></div><br>
	</div>

	<div>
		<%= f.submit 'Create Book', class:"btn" %>
	</div>
<% end %>
</body>