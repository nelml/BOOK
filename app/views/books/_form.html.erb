<%= form_with model: @book, local: true do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
		</div>
	<% end %>

	<div class="field_new">
		<h4 class="nb">Title</h4>
		<div><%= f.text_field :title %></div>

		<% if @book.errors.include?(:title) %>
			<p style="color: red;"><%= @book.errors.full_messages_for(:title).first %></p>
		<% end %>
	</div>
	<div class="field_new">
		<h4 class="nb">Body</h4>
		<div><%= f.text_area :body %></div><br>

		<% if @book.errors.include?(:body) %>
			<p style="color: red;"><%= @book.errors.full_messages_for(:body).first %></p>
		<% end %>
	</div>

	<div>
		<%= f.submit 'Create Book', class:"btn" %>
	</div>
<% end %>